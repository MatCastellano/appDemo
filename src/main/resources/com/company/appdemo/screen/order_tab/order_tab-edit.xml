<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://order_TabEdit.caption"
        focusComponent="form">
    <data>
        <instance id="order_TabDc"
                  class="com.company.appdemo.entity.Order_Tab">
            <fetchPlan extends="_base">
                <property name="orderline" fetchPlan="_base">
                    <property name="stockItem" fetchPlan="_base">
                        <property name="product" fetchPlan="_base"/>
                    </property>
                </property>
            </fetchPlan>
            <loader/>
            <collection id="orderlineDc" property="orderline"/>
        </instance>
        <instance id="customerDc" class="com.company.appdemo.entity.Customer">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <groupBox id="customer" caption="Customer" icon="font-icon:USER" width="50%" >



            <entityPicker dataContainer="order_TabDc" property="customer" inputPrompt="Choose a Customer " width="100%" required="false">
                <actions>
                    <action id="lookup" type="entity_lookup"/>
                    <action id="clear" type="entity_clear"/>
                </actions>
            </entityPicker>

        </groupBox>

        <groupBox id="calendarField" caption="Order date" icon="font-icon:CALENDAR">
        <form id="form" dataContainer="order_TabDc">
            <column width="350px">
                <dateField id="dateField" property="date" caption="" />
            </column>
        </form>
        </groupBox>
        <groupBox id="orderlineBox" caption="msg://com.company.appdemo.entity/Order_Tab.orderline" icon="font-icon:FIRST_ORDER">
            <table id="orderlineTable" dataContainer="orderlineDc"  width="100%" height="150%" >
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>

                    <column id="start" caption="Start"/>
                    <column id="end" caption="End"/>
                    <column id="stockItem" caption="Stock Item"/>
                </columns>
                <buttonsPanel>
                    <button action="orderlineTable.create"/>
                    <button action="orderlineTable.edit"/>
                    <button action="orderlineTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
