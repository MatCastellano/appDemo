<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://calendar1Browse.caption"
        focusComponent="calendar">
    <data readOnly="true">
        <collection id="calendarsDc"
                    class="com.company.appdemo.entity.Calendar">
            <fetchPlan extends="_base"/>
            <loader id="calendarsDl">
                <query>
                    <![CDATA[select e from Calendar e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <hbox expand="calendar"
              height="100%"
              spacing="true"
              width="100%">
            <calendar id="calendar"
                      endDate="2020-07-23"
                      height="100%"
                      startDate="2020-07-17"/>
            <scrollBox height="100%"
                       orientation="vertical"
                       spacing="true"
                       width="300px">
                <label htmlEnabled="true"
                       stylename="h3"
                       value="msg://addEvent"/>
                <dateField id="startDateField"
                           caption="msg://io.jmix.sampler.entity/CalendarEvent.startDate"
                           width="100%"/>
                <dateField id="endDateField"
                           caption="msg://io.jmix.sampler.entity/CalendarEvent.endDate"
                           width="100%"/>
                <textField id="captionField"
                           caption="msg://io.jmix.sampler.entity/CalendarEvent.caption"
                           width="100%"/>
                <textField id="descriptionField"
                           caption="msg://io.jmix.sampler.entity/CalendarEvent.description"
                           width="100%"/>
                <button id="addEvent"
                        caption="msg://addEvent"/>
            </scrollBox>
        </hbox>
    </layout>
</window>
