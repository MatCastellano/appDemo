<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://orderlineEdit.caption"
        focusComponent="form">
    <data>
        <instance id="orderlineDc"
                  class="com.company.appdemo.entity.Orderline">
            <fetchPlan extends="_base">
                <property name="stockItem" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="orderlineDc">
            <column width="350px" >
                <dateField id="startField" property="start" caption="Start date" icon="font-icon:CALENDAR_TIMES_O"/>
                <dateField id="endField" property="end" caption="End date" icon="font-icon:CALENDAR_TIMES_O"/>
                <entityPicker id="stockItem" property="stockItem" caption="Stock Item" icon="BARCODE">
                    <actions>
                        <action id="entityLookup" type="entity_lookup"/>
                        <action id="entityClear" type="entity_clear"/>
                    </actions>
                </entityPicker>
                <maskedField mask="hhhhhhhh-hhhh-hhhh-hhhh-hhhhhhhhhhhh" id="idField" property="id" icon="font-icon:CODE"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
