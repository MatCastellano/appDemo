<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://orderlineBrowse.caption"
        focusComponent="orderlinesTable">
    <data readOnly="true">
        <collection id="orderlinesDc"
                    class="com.company.appdemo.entity.Orderline">
            <fetchPlan extends="_base">
                <property name="order" fetchPlan="_instance_name">
                    <property name="orderline" fetchPlan="_base">
                        <property name="stockItem" fetchPlan="_base">
                            <property name="product" fetchPlan="_base"/>
                        </property>
                    </property>
                    <property name="id"/>
                </property>
            </fetchPlan>
            <loader id="orderlinesDl">
                <query>
                    <![CDATA[select e from Orderline e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="orderlinesTable" spacing="true">

        <filter id="filter"
                dataLoader="orderlinesDl">
            <properties include=".*"/>
        </filter>
        <table id="orderlinesTable"
               width="100%"
               dataContainer="orderlinesDc">
            <actions>
                <action id="create" type="create" />
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="id" caption="Order ID"/>
                <column id="start" caption="Start"/>
                <column id="end" caption="End"/>
                <column id="stockItem" caption="Stock Item Identifier"/>

            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="orderlinesTable.create" enable="false"/>
                <button id="editBtn" action="orderlinesTable.edit"/>
                <button id="removeBtn" action="orderlinesTable.remove"/>
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
