<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://UserEdit.caption"
        focusComponent="form">
    <data>
        <instance id="userDc"
                  class="com.company.appdemo.entity.User">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
    </data>
    <actions>
        <action id="windowCommitAndClose"
                caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="userDc">
            <column width="350px">
                <comboBox id="tenantField" property="tenant" editable="false" caption="Tenant" icon="EMPIRE"/>
                <textField id="usernameField" property="username" editable="false" icon="font-icon:USER"/>
                <passwordField id="passwordField"
                               caption="msg://com.company.appdemo.entity/User.password"
                               required="true"
                               visible="false"
                               icon="font-icon:USER_SECRET"
                />
                <passwordField id="confirmPasswordField"
                               caption="msg://confirmPassword"
                               required="true"
                               visible="false"
                               icon="font-icon:USER_SECRET"/>
                <textField id="firstNameField" property="firstName" icon="font-icon:USER_CIRCLE_O"/>
                <textField id="lastNameField" property="lastName" icon="font-icon:USER_CIRCLE_O"/>

                <textField id="emailField" property="email" icon="font-icon:MAIL_FORWARD" >
                    <validators>
                        <email message="Invalid email"/>
                    </validators>
                </textField>

                <comboBox id="timeZoneField" property="timeZoneId" icon="font-icon:CALENDAR_TIMES_O"/>
                <checkBox id="activeField" property="active" icon="font-icon:CHECK"/>


            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
