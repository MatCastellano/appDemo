<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://productEdit.caption"
        focusComponent="form">
    <data>
        <instance id="productDc"
                  class="com.company.appdemo.entity.Product">
            <fetchPlan extends="_base">

                <property name="category" fetchPlan="_base"/>
                <property name="stockItems" fetchPlan="_base"/>
                <property name="prices" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="stockItemsDc" property="stockItems"/>
            <collection id="pricesDc" property="prices"/>
        </instance>
        <collection id="productCategoriesDc"
                    class="com.company.appdemo.entity.ProductCategory">
            <fetchPlan extends="_base"/>
            <loader id="productCategoriesDl">
                <query>
                    <![CDATA[select e from ProductCategory e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="productDc">
            <column width="350px">
                <textField id="p_nameField" property="p_name" caption="Product Name" icon="font-icon:PRODUCT_HUNT"/>
                <textArea id="descriptionField" property="description" caption="Description" icon="font-icon:INFO"/>
                <!--<textField id="priceField" property="prices" caption="Price" />-->
                <entityComboBox id="categoryField" property="category" optionsContainer="productCategoriesDc" caption="Category" icon="BOOK"/>
            </column>
        </form>
        <tabSheet id="contentTabSheet">
            <tab id="stockItemsBox" caption="StockItems" margin="true"
                 spacing="true" icon="font-icon:INDENT" >
                <table id="stockItemsTable" dataContainer="stockItemsDc" width="100%" >
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="identifier" caption="Identifier" />

                    </columns>
                    <buttonsPanel>
                        <button action="stockItemsTable.create"/>
                        <button action="stockItemsTable.edit"/>
                        <button action="stockItemsTable.remove"/>
                    </buttonsPanel>
                </table>
            </tab>


        <tab id="pricesBox" caption="Prices" margin="true"
             spacing="true" icon="font-icon:MONEY">
            <table id="pricesTable" dataContainer="pricesDc" width="100%" >
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="price" caption="Price" />
                </columns>
                <buttonsPanel>
                    <button action="pricesTable.create"/>
                    <button action="pricesTable.edit"/>
                    <button action="pricesTable.remove"/>
                </buttonsPanel>
            </table>
        </tab>
        </tabSheet>

        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
